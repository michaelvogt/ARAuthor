<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/label_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:labelFor="@id/edit_intro"
        android:text="Introduction:"
        android:textAlignment="textEnd"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_intro"
        app:layout_constraintEnd_toStartOf="@+id/edit_intro"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_intro"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textMultiLine|textImeMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/label_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Objecttype:"
        android:textAlignment="viewEnd"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_type"
        app:layout_constraintEnd_toStartOf="@+id/edit_type"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/edit_type"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_intro" />

    <TextView
        android:id="@+id/label_built_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:labelFor="@id/edit_built_in"
        android:text="Built in"
        android:textAlignment="viewEnd"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_built_in"
        app:layout_constraintEnd_toStartOf="@+id/edit_built_in"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_built_in"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="date"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_type" />
</android.support.constraint.ConstraintLayout>